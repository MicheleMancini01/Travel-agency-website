extends layout

block content
  nav.navbar.bg-dark.border-bottom.border-body.navbar-expand-lg(style='position: fixed; top: 0; width: 100%; z-index: 5', data-bs-theme='dark')
    a.navbar-brand(type='submit', href='/')
      h1.text-start.fw-normal.fs-2.ms-2.mt-2 L.F. Rossi
    #navbarSupportedContent
      ul.nav.my-3.me-2.px-0.position-absolute.top-0.end-0
        li.nav-item
          a.nav-link.text-light.active(aria-current='page', type='submit', href='/') Home
  .container.mt-5.pb-4(style='padding-top: 100px')
    .row.align-items-start.pb-5
      .col-3
      .col-6
        form.p-5.bg-secondary-subtle.rounded(method='post', action='/post')
          h1.mb-5 Admin Login
          .mb-3
            label.form-label(for='exampleInputEmail1') Email address
            input#exampleInputEmail1.form-control(type='email', aria-describedby='emailHelp', name="mail")
          .mb-3
            label.form-label(for='exampleInputPassword1') Password
            input#exampleInputPassword1.form-control(type='password', name="password")
          button.btn.btn-primary.mt-3(type='submit') Login
      .col-3
  .bg-dark.text-center.text-light.py-3(style='width: 100%')
    p.text-center Dream Holiday Agency
    a(style='color: darkgray', href='#')
      p.text-center Home
    a(style='color: darkgray', href='')
      p.text-center Terms &amp; Conditions
    p.text-center P. Iva: 8709859089097
