extends layout

block content
 nav.navbar.bg-dark.border-bottom.border-body.navbar-expand-lg(style='position: fixed; top: 0; width: 100%; z-index: 5', data-bs-theme='dark')
  a.navbar-brand(href='#home')
    h1.text-start.fw-normal.fs-2.ms-2.mt-2 D.L Agency
  #navbarSupportedContent
    ul.nav.my-3.me-2.px-0.position-absolute.top-0.end-0
      li.nav-item
        a.nav-link.text-light.active(aria-current='page', href='/') Home        
 .container(style='margin-top: 120px')
  h1.text-center Admin area! 
  h2.text-center.fs-4 This area allow the admin to post new offers directly into the database.
  form#myForm.rounded.m-5.p-5(style='background-color: darkgray', method='post', action='/trips')
    .container.text-start.fw-medium
      .row.align-items-start        
        .mb-3
          label.form-label(for='name') Name of the location:
          input#name.form-control(type='text', name='location', required, placeholder='location')
        .mb-3
          label.form-label(for='email') Link of the image:
          input#email.form-control(type='text', name='image', required, placeholder='image' max ="5000")
          p.mt-4.mb-1 Description:
        .form-floating(style="margin-top: -12px")
          label(for='text') 
          textarea#text.form-control(placeholder='description', name='description', style='height: 100px', required max="5000") 
    button.btn.btn-primary.ms-4.mt-5.fs-6(type='submit', style='width:100px') Post
  h3.text-center You are in control 
  h5.text-center.mb-5 All these trip offers are loaded directly from the database.
  .row.mb-5  
      each trip in trips
         .col-4 
            .card.mb-5
              img.card-img-top(src=trip.image, alt='img')
              .card-body
                h5.card-title.titolo5.text-center #{trip.location}
                p.card-text.text-center.fs-6.fw-none #{trip.description}
                .text-center
                  .row.mt-5
                    .col
                      a.btn.btn-info(href=`/edit/${trip.id}`, type='submit', style="width: 100px") Edit 
                    .col  
                      a.btn.btn-danger(href=`/delete/${trip.id}`, type='submit', style="width: 100px") Delete 
 .bg-dark.text-center.text-light.py-3(style='width: 100%')
  p.text-center Dream Holiday Agency
  a(style='color: darkgray', href='#')
    p.text-center Home
  a(style='color: darkgray', href='')
    p.text-center Terms &amp; Conditions
  p.text-center P. Iva: 8709859089097 
