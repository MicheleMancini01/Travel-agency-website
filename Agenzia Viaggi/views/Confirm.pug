extends layout

block content
  nav.navbar.bg-dark.border-bottom.border-body.navbar-expand-lg(style='position: fixed; top: 0; width: 100%; z-index: 5', data-bs-theme='dark')
   a.navbar-brand(type='submit', href='/')
    h1.text-start.fw-normal.fs-2.ms-2.mt-2 D.L Agency
   #navbarSupportedContent
    ul.nav.my-3.me-2.px-0.position-absolute.top-0.end-0
      li.nav-item
        a.nav-link.text-light.active(aria-current='page', type='submit', href='/') Home
  .container.text-center(style='margin-top: 120px; position:relative')
    h1.fs-2.fw-bold.ms-2.mt-5 PERFECT: #{nome.Name}
    h2.my-3 You have just applied for a trip to: #{trip.location}
    h5
      | We will contact you as soon as possible via email or telephone call.
    img.card-img-top.my-3.rounded(src=trip.image, alt='img', style="max-width: 450px")
    h5 We Will send to you all the information about the trip at the email of your account.
    h5.mb-5 Thank for choosing to work with us. see you soon.
  .bg-dark.text-center.text-light.py-3(style='width: 100%')
    p.text-center Dream Holiday Agency
    a(style='color: darkgray', href='#')
      p.text-center Home
    a(style='color: darkgray', href='')
      p.text-center Terms &amp; Conditions
    p.text-center P. Iva: 8709859089097 
